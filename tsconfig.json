{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2017"],
    "target": "ES2018",
    "types": ["node"],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [{ "transform": "typescript-rtti/dist/transformer" }]
  }
}
